#include <iostream>

using namespace std;

int main()
{
    int n,i,j;
    cout<<"Enter a number:"<<endl;
    cin>>n;

    for(i=0;i<=n;i++){
        for(j=1;j<=n-i;j++){
            cout<<" ";
        }
        for(j=1;j<=i;j++){
            cout<<j<<" ";
        }
        cout<<endl;
    }
    return 0;
}
